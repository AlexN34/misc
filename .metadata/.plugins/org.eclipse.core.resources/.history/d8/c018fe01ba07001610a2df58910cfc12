import java.util.ArrayList;
import java.util.HashMap;
import java.util.Map;

public class BFSGraph implements Graph<String> {
	Map<Vertex<String>, ArrayList<Edge<String>>> vertices;
//	Vertex[] adjLists
	@Override
	public void addVertex (Vertex<String> v) {
		this.vertices.put(v, new ArrayList<Edge<String>>());
	}
	@Override
	public void removeVertex (Edge<String> v) {
		this.vertices.remove(v);
		
	}
	

	@Override
	public void addEdge(Edge<String> e) {
		this.vertices.get(e.src).add(e.dest);
	}
	@Override
	public void removeEdge(Edge<String> e) {
		this.vertices.get(e.src).remove(e.dest);
		
	}

	 public Map<Vertex<String>, ArrayList<Vertex<String>>> getVertices() {
		return this.vertices;
	}
	public void setVertices(Map<Vertex<String>, ArrayList<Vertex<String>>> vertices) {
		this.vertices = vertices;
	}

	public BFSGraph(Map<Vertex<String>, ArrayList<Vertex<String>>> vertices) {
		super();
		this.vertices = vertices;
	}

	public BFSGraph() {
		super();
		this.vertices = new HashMap<Vertex<String>, ArrayList<Vertex<String>>>();
	}
}

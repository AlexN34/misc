import java.util.Hashtable;
import java.util.TreeSet;

public class Venue {
	private String name;
	private TreeSet<String> roomNames; //Necessary as you cannot iterate over HashTables TODO convert to only Treeset
	private Hashtable<String, Room> rooms;

	//	GETTERS AND SETTERS
	private String getName() {
		return name;
	}

	private void setName(String name) {
		this.name = name;
	}

	public Hashtable<String, Room> getRooms() {
		return rooms;
	}

	// Not sure if required
	public void setRooms(Hashtable<String, Room> rooms) {
		this.rooms = rooms;
	}
	
	@Override
	public String toString() {
		String returnString;
		for (String room : roomNames) {
			String roomString = this.name + " " + rooms.get(room).toString() + "\n";
			returnString += roomString;
		}
		return returnString;
		
	}

	//	Constructor

	public Venue (String name) {
		this.name = name;
		this.rooms = new Hashtable<String, Room>();
		this.roomNames = new TreeSet<String>(); 
	}


	//	HELPER METHODS
	
	public void addRoom(Room r ) {
		this.rooms.put(r.getName(), r);
		this.roomNames.add(r.getName());
	}
	
	public void delRoom(Room r ) {
		if (rooms.containsKey(r.getName())) {
			this.rooms.remove(r.getName());
			this.roomNames.remove(r.getName());
		}
	}
	
	public boolean searchForRoomName(String roomName) {
		return this.roomNames.contains(roomName);
	}


}

/*
 * 
 * @startuml
 * Venue *-- Room
 * DateData --* Room
 *  
